	<properties>
		<java.version>21</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<liquibase.version>4.33.0</liquibase.version>
		<postgresql.driver.version>42.7.3</postgresql.driver.version>
		<spring.boot.version>3.5.0</spring.boot.version>
		<lombok.version>1.18.30</lombok.version>
		<jjwt.version>0.11.5</jjwt.version>
		<awssdk.version>2.25.69</awssdk.version>
		<aws.starter.sqs.version>3.1.1</aws.starter.sqs.version>
		<!-- Sonar configuration properties -->
		<sonar.host.url>https://sonarcloud.io</sonar.host.url>
		<sonar.organization>challenger-pos</sonar.organization>
		<sonar.projectKey>challenger-pos_stock-service</sonar.projectKey>
		<sonar.projectName>Stock Service</sonar.projectName>
		<sonar.sources>src/main</sonar.sources>
		<sonar.tests>core/src/test,application/src/test,infrastructure/src/test</sonar.tests>
		<sonar.coverage.jacoco.xmlReportPaths>core/target/site/jacoco/jacoco.xml,application/target/site/jacoco/jacoco.xml,infrastructure/target/site/jacoco/jacoco.xml,usecase/target/site/jacoco/jacoco.xml</sonar.coverage.jacoco.xmlReportPaths>
		<sonar.coverage.exclusions>**/core/exception/**,**/config/**,**/security/**,**/message/**,**/persistence/entity/**,**/*Config.java,**/*Entity.java,**/*Listener.java,**/*Filter.java,**/StockServiceApplication.java</sonar.coverage.exclusions>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-starter-data-jpa</artifactId>
